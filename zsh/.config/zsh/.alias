#########################
# Linux only
#########################
if [[ `uname` == 'Linux' ]]; then
	# Listing colours
	alias ls='ls --color'
fi

#########################
# BSD/Darwin only
#########################
if [[ `uname` == 'Darwin' ]]; then
	# Listing colours
	alias ls='ls -G'
fi
#########################
# General
#########################
# Use nvim by default
alias vi='nvim'
alias vim='nvim'

# Listing shorhand
alias ll='ls -hl'
alias la='ls -Ahl'

# Make termite run tmux
alias t='tmux new-session -A -s default'

# Ranger
alias r='ranger'
